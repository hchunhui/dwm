export XMODIFIERS="@im=fcitx"
export XIM=fcitx
export XIM_PROGRAM=fcitx
killall fcitx
fcitx &
dwm &
wmname LG3D &
xrdb .Xdefaults
synclient TapButton1=1
synclient TapButton2=2
synclient TapButton3=3
synclient VertEdgeScroll=1
while true; do
    line="`cat /sys/class/power_supply/BAT1/status`"
    line="$line `cat /sys/class/power_supply/BAT1/capacity`"
    line="$line `date`"
    xsetroot -name "$line"
    sleep 1
done
